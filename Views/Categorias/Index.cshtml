@model IEnumerable<ControlIngresoGastos.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de categorias</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Crear nueva categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCategoria)
            </td>
            <td>
                @if(item.Tipo == "IN")
                    {
                        <p>Ingreso</p>
                    }
                    else
                    {
                        <p>Gasto</p>
                    }
            </td>
            <td>
               @if(item.Estado == true)
                    {
                        <p class="btn btn-outline-secondary">Activo</p>
                    }
                    else
                    {
                        <p class="btn btn-outline-danger">Inactivo</p>
                    }
            </td>
            <td>
                <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
